@import 'nib'
@import 'grid'

global-reset()

columns = 12
column-width = 60px
gutter-width = 20px

total-width = 100%

orangePushButton(fontSize=18px, borderRad=7px, easeTime=0.2s)
  Ax = 0
  Ay = fontSize/3
  Ablur = 0
  Bx = 0
  By = fontSize/1.5
  Bblur = fontSize + fontSize/9
  BxActive = 0
  ByActive = fontSize/2
  BblurActive = fontSize
  TranslateActive = fontSize/4.5
  padtb = fontSize/2
  padlr = fontSize + fontSize/9

  display inline-block
  border-radius borderRad
  box-shadow Ax Ay Ablur #823a17, Bx By Bblur rgba(#000,0.5)
  transition-property all easeTime ease-in-out 0s

  span
    display inline-block
    padding padtb padlr
    font-family Verdana, sans-serif
    font-size fontSize
    text-transform uppercase
    line-height 1
    text-shadow 0 -1px 1px rgba(19, 65, 88, .8)
    background #BB5422
    background linear-gradient(top, #FA8246, #BB5422)
    border-radius borderRad
    box-shadow inset 0 -1px 1px rgba(#fff,.10)
    transition-property all easeTime ease-in-out 0s
    
  &:active
    box-shadow Ax Ay Ablur #823a17, BxActive ByActive BblurActive rgba(#000,0.3)
    span
      transform translate(0, TranslateActive)
  &:focus
    outline:yellow dotted thin;

input[type="text"]
  border-radius 7px
  box-shadow 0 0 2px rgba(#000,.5)

a
  outline none
  text-decoration none
  img
    border none
  &:link
  &:visited
    outline none
    text-decoration none
    color #fff
    border none

.button
  orangePushButton 12px, 5px
  margin 10px

.mainheader
  column 12
  h1
    font bold 12px Verdana, sans-serif
    color #717165
    text-transform uppercase

.primarynav
  column 12
  ul
    list-style-type none
    margin 0
    padding 0
    li
      display inline
      margin-right 5px
    li:last-child
      margin-right 0px

.mainsection
  column 9
  h1

.mainaside
  column 3

.mainfooter
  column 12

@media screen and (max-width: 720px)
  .mainsection
  .mainaside
    column 12
    margin-bottom 1em