@import 'nib'
@import 'grid'
@import 'fonts'

//resets
global-reset()
a
  outline none
  text-decoration none
  img
    border none
  &:link
  &:visited
    outline none
    text-decoration none
    color #fff
    border none

//grid settings
total-width = 100%

//helper function
orangePushButton(fontSize=18px, borderRad=7px, easeTime=0.2s)
  Ax = 0
  Ay = fontSize/3
  Ablur = 0
  Bx = 0
  By = fontSize/1.5
  Bblur = fontSize + fontSize/9
  BxActive = 0
  ByActive = fontSize/2
  BblurActive = fontSize
  TranslateActive = fontSize/4.5
  padtb = fontSize/2
  padlr = fontSize + fontSize/9

  display inline-block
  border-radius borderRad
  box-shadow Ax Ay Ablur #823a17, Bx By Bblur rgba(#000,0.5)
  transition-property all easeTime ease-in-out 0s

  span
    display inline-block
    padding padtb padlr
    font-family Verdana, sans-serif
    font-size fontSize
    line-height 1
    text-shadow 0 -1px 1px rgba(19, 65, 88, .8)
    background #BB5422
    background linear-gradient(top, #FA8246, #BB5422)
    border-radius borderRad
    box-shadow inset 0 -1px 1px rgba(#fff,.10)
    transition-property all easeTime ease-in-out 0s
    
  &:active
    box-shadow Ax Ay Ablur #823a17, BxActive ByActive BblurActive rgba(#000,0.3)
    span
      transform translate(0, TranslateActive)

  &:focus
    box-shadow Ax Ay Ablur #823a17, 0px 0px 10px 4px #bbf

//styles
body
  background fixed top left url('/img/BenderBG.jpg') no-repeat, black
  font-family 'DroidSansMonoRegular', Verdana, sans-serif
  color white

input
  padding 2px
  border-radius 7px
  border 1px solid #00f
  &:focus
    outline none
    box-shadow inset 0px 0px 5px #00f

  #nick
    margin 0 3px
  #inVal
    margin 0 3px
  
.mainheader
  column 12
  border-radius left 7px
  background linear-gradient(left, rgba(255,255,255,.8) 50%, rgba(0,0,0,.8) 70%)
  color #717165
  h1
    font-size 26px
    font-weight bold
    text-transform uppercase

.primarynav
  column 12
  ul
    list-style-type none
    margin 0
    padding 0
    li
      display inline
      margin-right 5px
    li:last-child
      margin-right 0px

.mainsection
  column 9
  offset 3
  min-height:800px

.mainfooter
  column 12
  text-align right

//Login styles (Login.html template)
.login
  absolute top right
  clearfix()
  .button
    float right
    margin 4px 4px 0px 0px
    padding 4px
    font-size 22px
    font-weight bold
    border-radius 7px
    cursor pointer
    background linear-gradient(bottom, #CCC, #555)
    box-shadow inset 0px 2px 0px rgb(165,165,165), inset -2px 0px 0px #222
    transition all 0.1s linear
    &:active
      box-shadow none
      transform translate(2px,-2px)
    &:focus
      outline none
      box-shadow inset 0px 2px 0px rgb(165,165,165), inset -2px 0px 0px #222, 0px 0px 10px 4px #bbf
    span
      color white
      border-radius 7px

  .accountForm
    float right
    border-radius 7px
    background linear-gradient(left, rgba(255,255,255,.8) 50%, rgba(0,0,0,.8) 70%)
    display none
    td
      padding 7px
      text-align center
      vertical-align middle
    fieldset
      label
        display inline-block
        width 80px
    fieldset[name="email"]
      display none

  .usernameDisplay
    font bold 24px 'DroidSansMonoRegular', Verdana, sans-serif
    border-radius 7px
    padding 5px
    background silver
    &:before
      content 'Welcome '

  .message
    float right
    display none
    border-radius left 7px
    font-size 26px
    background linear-gradient(left, rgba(255,51,28,.8) 50%, rgba(0,0,0,.8) 70%)


//Chat message styles (Message.html template)
.messages
  padding 10px
  border solid #BB5422 2px
  box-shadow inset 4px 4px 8px #BB5422
  background-color rgb(136,136,255)
  color black

  .message
    background-color white
    border-bottom solid #000 1px
    border-left solid #000 1px
    border-radius left 7px
    &:first-child
      border-top solid #000 1px
    clearfix()
  
    .messageHead
    .messageText
      float left
    
    .messageHead
      padding 8px
      min-width 120px
      background #0B4A8A
        //IE6-9
      filter unquote('progid:DXImageTransform.Microsoft.gradient( startColorstr=#77A6F7, endColorstr=#0B4A8A,GradientType=1 )')
      background linear-gradient(left, #77A6F7, #42679E, #0B4A8A)
      border solid 1px #0B4A8A
      border-radius left 7px
      color white
      .nickname
        font-family Verdana, sans-serif
        font-weight bold
        text-shadow -1px 0 1px rgba(#000,.5)
        display block
      .ts
        font-size 8px
    
    .messageText
      margin-left 5px
      line-height 2


@media screen and (max-width: 720px)
  .mainsection
    offset 0
    column 12
    margin-bottom 1em